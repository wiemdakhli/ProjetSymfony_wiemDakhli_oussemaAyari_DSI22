<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style>
            h1{text-align: center;}
            form{width:500px;}
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">
                <img width="70px" src="{{asset('assets/images/logoISET.png')}}" alt="">
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
          
              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_enseignant_index')}}">Enseignants
                      <span class="visually-hidden">(current)</span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_soutenance_index')}}">Soutenances</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_etudiant_index')}}">Etudiants</a>
                  </li>
                </ul>
                <div class="d-flex">
                  <div class="me-sm-2" style="color:white; font-size:25px;">Service de stages</div>
                </div>
              </div>
            </div>
          </nav>
        <div class="container"><center><br>
        {% block body %}{% endblock %}</center>
        </div>
    </body>
</html>
